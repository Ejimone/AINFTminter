steps:
  # Build the container image
  - name: "gcr.io/cloud-builders/docker"
    args: ["build", "-t", "gcr.io/$PROJECT_ID/ai-nft-minter-backend", "."]

  # Push the container image to Container Registry
  - name: "gcr.io/cloud-builders/docker"
    args: ["push", "gcr.io/$PROJECT_ID/ai-nft-minter-backend"]

  # Deploy container image to Cloud Run
  - name: "gcr.io/google.com/cloudsdktool/cloud-sdk"
    entrypoint: gcloud
    args:
      - "run"
      - "deploy"
      - "ai-nft-minter-backend"
      - "--image"
      - "gcr.io/$PROJECT_ID/ai-nft-minter-backend"
      - "--region"
      - "us-central1"
      - "--platform"
      - "managed"
      - "--allow-unauthenticated"
      - "--set-env-vars"
      - "GOOGLE_API_KEY=${_GOOGLE_API_KEY},PINATA_JWT=${_PINATA_JWT},PRIVATE_KEY=${_PRIVATE_KEY},CONTRACT_ADDRESS=${_CONTRACT_ADDRESS},WEB3_INFURA_PROJECT_ID=${_WEB3_INFURA_PROJECT_ID}"

images:
  - "gcr.io/$PROJECT_ID/ai-nft-minter-backend"

# Substitution variables (set these in Cloud Build trigger or CLI)
substitutions:
  _GOOGLE_API_KEY: "your-google-api-key"
  _PINATA_JWT: "your-pinata-jwt"
  _PRIVATE_KEY: "your-private-key"
  _CONTRACT_ADDRESS: "your-contract-address"
  _WEB3_INFURA_PROJECT_ID: "your-infura-project-id"

options:
  logging: CLOUD_LOGGING_ONLY
